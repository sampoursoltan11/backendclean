files:
  "/etc/httpd/conf.d/security_headers.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Security Headers for Enterprise-Grade Security
      Header always set X-Frame-Options "SAMEORIGIN"
      Header always set X-Content-Type-Options "nosniff"
      Header always set X-XSS-Protection "1; mode=block"
      Header always set Referrer-Policy "strict-origin-when-cross-origin"
      Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

      # HSTS - Force HTTPS for 1 year
      Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

      # Content Security Policy
      Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://your-api-domain.com"

container_commands:
  01_upgrade_pip:
    command: pip install --upgrade pip
  02_install_dependencies:
    command: pip install -r requirements.txt
